---
import Navbar from "../components/Navbar.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="We will offer top-tier marketing solutions, streamlining your company's online presence and driving growth with precision and finesse.">
		<meta name="keywords" content="digital marketing, web development, content creation, SEO, PPC, social media marketing, email marketing, analytics, web design, UX design">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="./favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<meta property="og:title" content="Scarlet - Home" />
		<meta property="og:description" content="We will offer top-tier marketing solutions, streamlining your company's online presence and driving growth with precision and finesse." />
		<meta property="og:image" content="/scarlet-og.png" />

		<title>{ title }</title>
		<link rel="stylesheet" href="/css/main.css">
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>
