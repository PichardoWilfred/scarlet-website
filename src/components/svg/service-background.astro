<style lang="scss" is:global>
    section#services.show {
        path.particle {
            transform-box: fill-box;
            transform-origin: center;

            translate: 200px;
            transform: rotate(250deg);
            
            animation: slide-rotated 800ms cubic-bezier(0.25, 0.06, 0.5, 1) forwards;
        }
        @keyframes slide-rotated {
            0% {
                translate: 200px;
                transform: rotate(250deg);
            }
            100% {
                translate: 0px;
                transform: rotate(-20deg);
            }
        }
        
        path.particle-1 {
            animation-delay: 100ms;
        }
        path.particle-2 {
            animation-delay: 180ms;
        }
        path.particle-3 {
            animation-duration: 2000ms;
            animation-delay: 220ms;
        }
        path.particle-4 {
            animation-duration: 1800ms;
            animation-delay: 280ms;
        }
        path.particle-5 {
            animation-duration: 1600ms;
            animation-delay: 320ms;
        }
        path.particle-6 {
            animation-duration: 1400ms;
            animation-delay: 470ms;
        }
        path.particle-7 {
            animation-duration: 1200ms;
            animation-delay: 500ms;
        }
    }
    // deactivate temporarily
    section#services.float  {
        path.particle {
            translate: 0px;
            animation: particle-float 1400ms cubic-bezier(0.25, 0.06, 0.5, 1) infinite forwards;
        }
        @keyframes particle-float {
            0% {
                transform: translateY(0px) rotate(-20deg);
            }
            50% {
                transform: translateY(20px);
            }
            100% {
                transform: translateY(0px) rotate(70deg);
            }
        }

        path.particle-1 {
            animation-duration: 10000ms;
